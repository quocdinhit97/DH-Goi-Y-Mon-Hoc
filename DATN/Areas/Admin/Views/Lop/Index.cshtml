			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="form-group row">
						<label class="col-sm-4 col-form-label"> CTDT </label>
						<div class="col-sm-8">
							@Html.DropDownListFor(model => model.Ma_CTDT, ViewBag.ListCTDT as SelectList, new { @class = "form-control", id = "maCTDT" })
						</div>
