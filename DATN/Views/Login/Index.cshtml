
@model DATN.Models.ClassTemp
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Đăng nhập</title>
	<link href="~/Assets/css/StyleLogin.css" rel="stylesheet" />
	<link href="~/Assets/Select2/select2.min.css" rel="stylesheet" />
	<script src="https://code.jquery.com/jquery-3.3.1.js" type="text/javascript"></script>
	<script src="~/Assets/Select2/select2.min.js"></script>
	<link rel="shortcut icon" href="~/Assets/images/seo.png" />
</head>
<body>
	<div class="login-wrap">
		<div class="login-html">

			<input id="tab-2" type="radio" name="tab" class="sign-up" checked><label for="tab-2" class="tab">Đăng nhập</label>
			<div class="login-form">
				@using (Html.BeginForm("LoginWithGoogle", "Login", FormMethod.Post))
				{
					@Html.AntiForgeryToken();
					<div class="sign-up-htm">
						<div class="group">
							@Html.Raw(TempData["Login_ERR"])
						</div>
						<div class="group">
							<label for="user" class="label">Lớp</label>
							@*@Html.TextBoxFor(model => model.Lops, new { @class = "input" })*@
							@Html.DropDownListFor(model => model.lops, ViewBag.Lop as SelectList, new { @class = " input select2" })
						</div>

						<div class="group">
							<input type="submit" class="button btn-google" value="Login Google+">
						</div>
						<div class="hr"></div>
					</div>
				}

			</div>
		</div>
	</div>

</body>
</html>
<script>

	$(document).ready(function () {
		$('.select2').select2({
			placeholder: 'Chọn lớp'
		});

	});
</script>

<style>
	.select2-container--default .select2-selection--single {
		height: 46px;
		border-radius: 25px;
		background: rgba(255,255,255,.1);
		border: none;
	}

		.select2-container--default .select2-selection--single .select2-selection__rendered {
			color: white;
			padding-top: 10px;
			padding-left: 20px;
		}

		.select2-container--default .select2-selection--single .select2-selection__arrow {
			top: 10px;
			right: 10px;
		}
	.login-form .group .btn-google {
		background: #ee1158;
	}
	.login-form .group .btn-google:hover {
		background-color: #ee1181;
		cursor: pointer;
	}
</style>