
@{
	ViewBag.Title = "Search";
	Layout = "~/Views/Share/_Layout.cshtml";
}

<div class="card text-center">
	<div class="page-header" style="margin:7px">
		<h3 class="page-title" style="font-family: sans-serif">
			Kết quả tìm kiếm cho: <strong style="color: #207fff">@ViewBag.search</strong>
		</h3>
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="@Url.Action("Diem","Homes")">Điểm</a></li>
				<li class="breadcrumb-item active" aria-current="page">Search</li>
			</ol>
		</nav>
	</div>
</div>



<div class="card" style="margin-top: 30px">
	<div class="card-body">
		<h3 class="text-center" style="font-family:sans-serif">Danh sách các lớp đang mở</h3>
		<table class="table table-hover nowrap" id="example" style="width:100%">
			<thead>
				<tr>
					<th>Mã môn học</th>
					<th>Tên môn học</th>
					<th>Lớp</th>
					<th>Thứ</th>
					<th>Phòng</th>
					<th>Thời gian</th>
				</tr>
			</thead>
			<tbody>
				@if (Enumerable.Count(ViewBag.Lich) > 0)
				{
					foreach (var item in ViewBag.Lich)

					{
						<tr>
							<td>@item.Ma_MH</td>
							<td>@item.Ten_MH</td>
							<td>@item.Lop</td>
							<td>@item.Thu</td>
							<td>@item.Phong</td>
							<td>@item.Thoi_Gian</td>
						</tr>
					}
				}
				else
				{
					<tr><td style="text-align:center" colspan="6"> Không tìm thấy. Liên hệ phòng đào tạo để mở lớp.</td></tr>
				}

			</tbody>
		</table>
	</div>
</div>

<div class="card" style="margin-top: 30px">
	<div class="card-body">
		<h3 class="text-center" style="font-family:sans-serif">Danh sách sinh viên có khả năng học cải thiện</h3>
		<table class="table table-hover nowrap" id="example" style="width:100%">
			<thead>
				<tr>
					<th>Mã sinh viên</th>
					<th>Mã môn học</th>
					<th>Họ tên</th>
					<th>Lớp</th>
					<th>Số Điện thoại</th>
					<th>Điểm kết thúc</th>
				</tr>
			</thead>
			<tbody>
				@if (Enumerable.Count(ViewBag.Friend) > 0)
				{
					foreach (var item in ViewBag.Friend)

					{
						<tr>
							<td>@item.Ma_SV</td>
							<td>@item.Ma_Mon</td>
							<td>@item.Ho_Ten</td>
							<td>@item.Lop</td>
							<td>@item.SDT</td>
							<td>@item.Diem_KT</td>
						</tr>
					}
				}
				else
				{
					<tr>
						<td colspan="6" style="text-align:center"> Không tìm thấy sinh viên.</td>
					</tr>

				}




			</tbody>
		</table>
	</div>
</div>